@model DiscussionForum.Models.Discussion
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-body">
            <h1 class="card-title">@Model.Title</h1>
            <div class="mb-3">
                <small class="text-muted">
                    Posted by @(string.IsNullOrWhiteSpace(Model.Author) ? "Anonymous" : Model.Author)
                    on @Model.CreateDate.ToString("MMM dd, yyyy HH:mm")
                </small>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <div class="mb-4">
                    <img src="~/images/@Model.ImageFileName"
                         class="img-fluid rounded"
                         alt="Discussion Image" />
                </div>
            }

            <div class="discussion-content mb-4">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4>Comments</h4>
            <div class="mb-4">
                <form id="comment-form">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="Author" class="form-label">Your Name (optional)</label>
                        <input type="text" id="Author" class="form-control" placeholder="Leave empty to post as Anonymous" />
                    </div>
                    <div class="mb-3">
                        <label for="Content" class="form-label">Your Comment*</label>
                        <textarea id="Content" class="form-control" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a comment.
                        </div>
                    </div>
                    <input type="hidden" id="DiscussionId" value="@Model.DiscussionId" />
                    <button type="submit" class="btn btn-primary">Post Comment</button>
                </form>
            </div>
            <div id="comments-container">
                <!-- Comments will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}