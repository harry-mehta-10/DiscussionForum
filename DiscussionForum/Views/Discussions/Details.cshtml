@model DiscussionForum.Models.Discussion

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Discussions</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>

            <h2>@Model.Title</h2>
            <div class="mb-3">
                <small class="text-muted">
                    Posted by @Model.Author on @Model.CreateDate.ToString("MMM dd, yyyy")
                </small>
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <span class="badge bg-secondary ms-2">@Model.Category</span>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <div class="mb-3">
                    <img src="~/images/@Model.ImageFileName" class="img-fluid" alt="Discussion Image" />
                </div>
            }

            <div class="mb-4">
                @Html.Raw(Model.Content)
            </div>

            <hr />

            <h4>Comments</h4>
            <div class="mb-4">
                <form id="comment-form">
                    <div class="form-group mb-3">
                        <label for="Content" class="control-label">Your Comment</label>
                        <textarea id="Content" class="form-control" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a comment.
                        </div>
                    </div>

                    <input type="hidden" id="DiscussionId" value="@Model.DiscussionId" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Post Comment</button>
                    </div>
                </form>
            </div>

            <div id="comments-container" class="mt-4">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}